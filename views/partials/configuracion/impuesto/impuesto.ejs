<div class="col-lg-12">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Impuestos</h5>
            
            <%- include('../../message/alert') %>
            <%- include('../../message/success') %>

            <div class="row g-3 mb-3">
                <div class="col-md-4">
                    <% if (estado) { %>
                        <a class="btn btn-danger" href="/impuesto/desactivar">Desactivar IVA</a>                
                    <% } else { %>
                        <a class="btn btn-primary" href="/impuesto/activar">Activar IVA</a>                
                    <% } %>
                </div>
            </div>
            

            <% if (estado) { %>
                <form class="row g-3" action="/impuesto/actualizar" method="post">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <div class="col-md-6">
                        <label class="form-label">Nombre del IVA</label>
                        <input type="text" class="form-control" name="nombre" value="<%= nombre %>" required>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Valor</label>
                        <input type="text" class="form-control" name="valor" value="<%= valor %>" required>
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-primary">Actualizar</button>
                    </div>
                </form>
            <% } %>

        </div>
    </div>
</div>