<div class="col-lg-12">
    <div class="card">

        <div class="card-body">
            <h5 class="card-title">Franelas</h5>
            <%- include('../message/alert-2') %>
            <%- include('../message/success-2') %>
            <table class="table table-bordered border-primary">
                <thead>
                    <tr>
                        <th scope="col">Tela</th>
                        <th scope="col">Talla</th>
                        <th scope="col">Color</th>
                        <th scope="col">Cuello</th>
                        <th scope="col">Manga</th>
                        <th scope="col">Marca</th>
                        <th scope="col">Stock</th>
                        <th scope="col">Precio</th>
                        <th scope="col">Observacion</th>
                        <th scope="col">Editar</th>
                        <th scope="col">Deshabilitar</th>
                    </tr>
                </thead>
                <tbody>
                    <% for(let i=0; i < franelas.length; i++) { %>
                        <tr>
                            <td><%= franelas[i].tela %></td>
                            <td><%= franelas[i].talla %></td>
                            <td><%= franelas[i].color %></td>
                            <td><%= franelas[i].cuello %></td>
                            <td><%= franelas[i].manga %></td>
                            <td><%= franelas[i].marca %></td>
                            <td><%= franelas[i].stock %></td>
                            <td><%= franelas[i].precio %></td>
                            <td><%= franelas[i].observacion %></td>
                            <td>
                                <a href="/inventario/franela/<%= franelas[i].id %>" class="btn btn-warning bi bi-brush"></a>
                            </td>
                            <td>
                                <a href="/inventario/franela/deshabilitar/<%= franelas[i].id %>" class="btn btn-danger bi bi-x-lg"></a>
                            </td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
            <div class="text-center">
                <% if (prev) { %>
                    <a class="btn btn-primary bi-arrow-left" href="<%= prev %>"></a>
                <% } %>
                <% if (next) { %>
                    <a class="btn btn-primary bi-arrow-right" href="<%= next %>"></a>
                <% } %>
            </div>
        </div>
    </div>
</div>