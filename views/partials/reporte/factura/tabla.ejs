<div class="card">
    <div class="card-body">
      <h5 class="card-title">Recibos</h5>

        <div class="col-md-2">
            <% if (prev) { %>
                <a class="btn btn-primary bi-arrow-left" href="<%= prev %>"></a>
            <% } %>
            <% if (next) { %>
                <a class="btn btn-primary bi-arrow-right" href="<%= next %>"></a>
            <% } %>
        </div>

      <table class="table table-striped">
        <thead>
          <tr>
            <th scope="col">Cliente</th>
            <th scope="col">Recibo</th>
            <th scope="col">Fecha</th>
          </tr>
        </thead>
        <tbody>
          <% for(let i=0; i < factura.length; i++) { %>
            <tr>
                <td><%= factura[i].nombre %></td>
                <td><a href="<%= factura[i].link %>">Recibo NÂº<%= factura[i].OrderId %></a></td>
                <td><%= factura[i].createdAt %></td>
            </tr>
          <% } %>
        </tbody>
      </table>

    </div>
  </div>