<div class="col-lg-12">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Editar franela</h5>

            <%- include('../../message/alert') %>
            <%- include('../../message/success') %>

            <form class="row g-3" action="/inventario/franela/edit/<%= data.id %>" method="post">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <div class="col-md-6">
                    <label class="form-label">Stock</label>
                    <input type="number" class="form-control" id="stock" name="stock" value="<%= data.stock %>">
                </div>
                <div class="col-md-6">
                    <label class="form-label">Precio</label>
                    <input type="text" class="form-control" id="precio" name="precio" value="<%= data.precio %>">
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-primary">Editar</button>
                </div>
            </form>

        </div>
    </div>
</div>