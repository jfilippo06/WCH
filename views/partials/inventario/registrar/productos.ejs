<div class="col-lg-12">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Registrar producto</h5>

            <%- include('../../message/alert-2') %>
            <%- include('../../message/success-2') %>

            <form class="row g-3" action="/inventario/registro/producto" method="post">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <div class="col-md-6">
                    <label for="inputtext5" class="form-label">Producto</label>
                    <input type="text" class="form-control" id="producto" name="producto" required>
                </div>
                <div class="col-md-6">
                    <label for="inputtext5" class="form-label">Tipo</label>
                    <input type="text" class="form-control" id="tipo" name="tipo" >
                </div>
                <div class="col-md-6">
                    <label for="inputtext5" class="form-label">Color</label>
                    <input type="text" class="form-control" id="color" name="color">
                </div>
                <div class="col-md-3">
                    <label for="inputtext5" class="form-label">Cantidad</label>
                    <input type="number" class="form-control" id="cantidad" name="cantidad">
                </div>
                <div class="col-md-3">
                    <label for="inputtext5" class="form-label">Precio</label>
                    <input type="text" class="form-control" id="precio" name="precio">
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-primary">Submit</button>
                    <button type="reset" class="btn btn-secondary">Reset</button>
                </div>
            </form>

        </div>
    </div>
</div>