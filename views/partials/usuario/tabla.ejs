<div class="col-lg-12">
    <div class="card">

        <div class="card-body">
            <h5 class="card-title">Lista de usuarios</h5>
            <table class="table table-bordered border-primary">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Correo electr√≥nico</th>
                        <th scope="col">Nombre de usuario</th>
                        <th scope="col">Rol</th>
                        <th scope="col">Editar</th>
                        <th scope="col">Deshabilitar</th>
                    </tr>
                </thead>
                <tbody>
                    <% for(let i=0; i < users.length; i++) { %>
                        <tr>
                            <th scope="row"><%= users[i].id %></th>
                            <td><%= users[i].email %></td>
                            <td><%= users[i].userName %></td>
                            <td><%= users[i].RoleId %></td>
                            <td>
                                <a href="#" class="btn btn-warning bi bi-brush"></a>
                            </td>
                            <td>
                                <a href="/usuario/deshabilitar/<%= users[i].id %>" class="btn btn-danger bi bi-x-lg"></a>
                            </td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
            <div class="text-center">
                <% if (prev) { %>
                    <a class="btn btn-primary bi-arrow-left" href="<%= prev %>"></a>
                <% } %>
                <% if (next) { %>
                    <a class="btn btn-primary bi-arrow-right" href="<%= next %>"></a>
                <% } %>
            </div>
        </div>
    </div>
</div>